        <TextBlock x:Name="SeAdmin_textBlock" HorizontalAlignment="Left" Margin="10,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <ListBox x:Name="Utenti_Listbox" HorizontalAlignment="Left" Height="150" Margin="180,53,0,0" VerticalAlignment="Top" Width="100" SelectionChanged="Utenti_Listbox_SelectionChanged"/>
        <Button x:Name="btnAdminSelect" Content="Fai diventare Admin" HorizontalAlignment="Left" Margin="52,183,0,0" VerticalAlignment="Top" Width="116" RenderTransformOrigin="0.081,0.071" Click="btnAdminSelect_Click"/>
